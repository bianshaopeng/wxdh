
page{
  height: 100%;
}
.view-contair{
  width: 100%;
  height:100%;
 
}



.title_box {
    padding: 24rpx 0 34rpx 0rpx;
}

.h2_title {
    padding: 0 0 0 10rpx;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 26rpx;
    color: #f95959;

    border-left: 2px solid #f95959;
}

/* list */
 .recom_list {
    display: flex;
    margin: 30rpx 0 20rpx 0;
    padding: 0 0 20rpx 0;
    border-bottom: 1px solid #eee;
}

 .recom_list .list_left {
    width: 130rpx;
    height: 130rpx;
    background-color: #eeeeee;
    border: solid 1rpx #eeeeee;
}

 .recom_list .list_left image {
    width: 100%;
    height: 100%;
}

/* center */
.recom_list .list_center {
    margin: 0 0 0 20rpx;
    width: 510rpx;
    align-self: flex-start;
}

 .recom_list .list_center .center_title {
    margin: 0 0 0 0;
    font-family: PingFang-SC-Bold;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    color: #595959;
    display: block;
}

 .recom_list .list_center .center_standard {
    display: block;

    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 64rpx;
    color: #989898;
}

 .recom_list .list_center .center_price {
    display: block;
    font-family: PingFang-SC-Bold;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    color: #f95959;
}

 .recom_list .list_center .center_price .sm_price {
    display: inline-block;
    margin: 0 0 0 14rpx;

    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 24rpx;
    letter-spacing: 0px;
    color: #989898;
    text-decoration: line-through;
}

/* right */
 .recom_list .list_right image {
    margin: 80rpx 0 0 0;
    width: 46rpx;
    height: 46rpx;
}