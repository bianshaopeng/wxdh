
page{
  height: 100%;
  background-color: #eee
}
.view-contair{
  width: 100%;
  height:100%;
 
 
 
}

.empty_wrap {
    background: #eee;
    height: 100%;

}

.empty_wrap image {
    display: block;
    width: 104rpx;
    height: 94rpx;
    margin: 94rpx auto 0;


}

.empty_wrap .empyt_txt {
    display: block;
    width: 100%;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 82rpx;
    color: #989898;
    text-align: center;
}

.title_box {
    padding: 24rpx 0 34rpx 0rpx;
}

.h2_title {
    padding: 0 0 0 10rpx;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 26rpx;
    color: #f95959;

    border-left: 2px solid #f95959;
}

/* list */
 .recom_list {
    display: flex;
    margin: 30rpx 20rpx 20rpx 20rpx;
    padding: 0 0 20rpx 0;
    border-bottom: 1px solid #eee;
}

 .recom_list .list_left {
    width: 130rpx;
    height: 130rpx;
    background-color: #eeeeee;
    border: solid 1rpx #eeeeee;
}

 .recom_list .list_left image {
    width: 100%;
    height: 100%;
}

/* center */
.recom_list .list_center {
    margin: 0 0 0 20rpx;
    width: 510rpx;
    align-self: flex-start;
}

 .recom_list .list_center .center_title {
    margin: 0 0 0 0;
    font-family: PingFang-SC-Bold;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    color: #595959;
    display: block;
}

 .recom_list .list_center .center_standard {
    display: block;

    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 64rpx;
    color: #989898;
}

 .recom_list .list_center .center_price {
    display: block;
    font-family: PingFang-SC-Bold;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    color: #f95959;
}

 .recom_list .list_center .center_price .sm_price {
    display: inline-block;
    margin: 0 0 0 14rpx;

    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 24rpx;
    letter-spacing: 0px;
    color: #989898;
    text-decoration: line-through;
}

/* right */
.list_right {
    width: 204rpx;
    height: 60rpx;
    align-self: flex-end;
    margin-left: auto;
    display: flex;
    justify-content: flex-end;
}

/* 购物车加减号 */

.list_right .car_icon {
    width: 46rpx;
    height: 46rpx;
}

.list_right text {
    flex: 1;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0.3rpx;
    color: #595959;
    vertical-align: top;
    display: inline-block;
    height: 60rpx;
    width: 60rpx;
    margin: -5rpx 0 0 0;
}
/*  底部购物车*/

.flex_car {
    position: absolute;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 9999;
}

.car_nav {
    position: fixed;
    bottom: 0;
    left: 50%;
    margin-left: -315rpx;
    padding: 12rpx 12rpx 12rpx 40rpx;
    display: flex;
    justify-content: space-between;
    width: 630rpx;
    height: 84rpx;
    box-sizing: border-box;
    background-color: #fff;
    box-shadow: 0px 0px 20px 0px rgba(249, 89, 89, 0.18);
    border-radius: 42rpx;
    z-index: 10001;
}

.car_nav .bg_car {
    width: 58rpx;
    height: 58rpx;
    line-height: 84rpx;
    margin-right: 30rpx;
}

.car_nav .sum {
    flex: 1;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 64rpx;
    letter-spacing: 0.3rpx;
    color: #f95959;
}

.car_nav .cardesc_right {
    width: 159rpx;
    height: 64rpx;
    background-color: #f95959;
    box-shadow: 0px 0px 20px 0px rgba(249, 89, 89, 0.18);
    border-radius: 31.3rpx;
    font-size: 30rpx;
    font-weight: bold;
    font-stretch: normal;
    line-height: 66rpx;
    letter-spacing: 0.3rpx;
    color: #ffffff;
    text-align: center;
}

/* 底部购物车展开  */
.car_desc {
    position: absolute;

    width: 100%;
    padding: 0 20%;
    max-height: 419rpx;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.maskLayer {
    position: relative;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 9999;
}

.choose {
    position: fixed;
    bottom: 0;
    width: 100%;
    max-height: 600rpx;
    padding: 0 0 100rpx 0;
    background: #fff;
    z-index: 10000;
    border-radius: 20rpx 20rpx 0 0;
}

.choose_h2 {
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 74rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
    text-align: center;
}

.choose_item {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
}

.item_left {
    flex: 1;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 74rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
}

.item_left .title {
    display: inline-block;
    margin-right: 20rpx;
}