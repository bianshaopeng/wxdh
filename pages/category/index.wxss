/* pages/category/index.wxss */
page {
    height: 100%;
}

.caregory {
    display: flex;
    flex-direction: row;
    height: 100%;
}

::-webkit-scrollbar {
    display: none;
}

/* 左边 */
.nav_left {
    background: #e0e0e0;
    width: 24%;
    height: 100%;

}

.nav_left .nav_box {
    width: 100%;
    display: flex;
    flex-direction: column;

}

.items_warp {
    border-radius: 10rpx;
    background: #fff;
    overflow: hidden;
}

.left_item {
    padding-left: 10rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    font-size: 32rpx;
    font-weight: bold;
    font-stretch: normal;
    line-height: 100rpx;
    color: #595959;

}

.left_item1 {
    text-indent: 20rpx;
    padding-bottom: 10rpx;
    background: #fff;


}

.left_item1 view {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 80rpx;
}

.active_item1 view {
    color: #fff;
    background: #f95959;
}

/* roight */
.nav_right {

    width: 76%;
    height: 100%;
    padding: 0 25rpx;
    background: #fff;
    box-sizing: border-box;

}

.nav_right .right_box {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.nav_right .right_box .right_list {
    position: relative;
    width: 250rpx;
    margin: 20rpx 0 0 0;


}

.nav_right .right_box .right_list .img_box {
    position: relative;
    width: 250rpx;
    height: 250rpx;
    background: #fff;

}

.nav_right .right_box .right_list .img_box image {
    width: 250rpx;
    height: 250rpx;
}

.nav_right .right_box .right_list .img_box .status {
    position: absolute;
    top: 0;
    left: 0;
    width: 250rpx;
    height: 250rpx;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    line-height: 250rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;

}

.nav_right .right_box .right_list .right_title {
    display: block;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 42rpx;
    color: #454545;
}

.nav_right .right_box .right_list .right_title .title_standard {
    display: inline-block;
    margin: 0 0 0 20rpx;
}

.nav_right .right_box .right_list .price {
    display: block;

    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 48rpx;
    letter-spacing: 0px;
    color: #f95959;
}



.nav_right .right_box .right_list .car image {
    width: 48rpx;
    height: 48rpx;
}

.nav_right .right_box .right_list .list_right {
    position: absolute;
    right: 0;
    bottom: 0;
    /*  width: 48rpx; */
    height: 48rpx;


}

.list_right .car_icon {
    width: 46rpx;
    height: 46rpx;
}

.list_right text {
    flex: 1;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0.3rpx;
    color: #595959;
    vertical-align: top;
    display: inline-block;
    height: 60rpx;
    width: 60rpx;
    margin: -5rpx 0 0 0;
}

/*  底部购物车*/

.flex_car {
    position: relative;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 9999;
}

.car_nav {
    position: fixed;
    bottom: 0;
    left: 50%;
    margin-left: -315rpx;
    padding: 12rpx 12rpx 12rpx 40rpx;
    display: flex;
    justify-content: space-between;
    width: 630rpx;
    height: 84rpx;
    box-sizing: border-box;
    background-color: #fff;
    box-shadow: 0px 0px 20px 0px rgba(249, 89, 89, 0.18);
    border-radius: 42rpx;
    z-index: 10001;
}

.car_nav .bg_car {
    width: 58rpx;
    height: 58rpx;
    line-height: 84rpx;
    margin-right: 30rpx;
}

.car_nav .sum {
    flex: 1;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 64rpx;
    letter-spacing: 0.3rpx;
    color: #f95959;
}

.car_nav .cardesc_right {
    width: 159rpx;
    height: 64rpx;
    background-color: #f95959;
    box-shadow: 0px 0px 20px 0px rgba(249, 89, 89, 0.18);
    border-radius: 31.3rpx;
    font-size: 30rpx;
    font-weight: bold;
    font-stretch: normal;
    line-height: 66rpx;
    letter-spacing: 0.3rpx;
    color: #ffffff;
    text-align: center;
}

/* 底部购物车展开  */
.car_desc {
    position: absolute;

    width: 100%;
    padding: 0 20%;
    max-height: 419rpx;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.maskLayer {
    position: absolute;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 9999;
}

.choose {
    position: fixed;
    bottom: 0;
    width: 100%;
    max-height: 600rpx;
    padding: 0 0 100rpx 0;
    background: #fff;
    z-index: 10000;
    border-radius: 20rpx 20rpx 0 0;
}

.choose_h2 {
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 74rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
    text-align: center;
}

.choose_item {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
}

.item_left {
    flex: 1;
    font-size: 26rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 74rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
}

.item_left .title {
    display: inline-block;
    margin-right: 20rpx;
}