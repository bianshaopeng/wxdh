/* pages/pay_desc/index.wxss */
page {
    height: 100%;
    width: 100%;
}

.warp_box {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #eee;
}

/* 顶部地址 */
.address {
    display: flex;
    margin: 0 0 10rpx 0;
    padding: 24rpx 20rpx;
    flex-direction: row;
    background: #fff;
}

.address image {
    width: 43rpx;
    height: 48rpx;
    margin: 0 20rpx 0 0;
    align-self: center;
}

.address .address_title {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 41rpx;

    color: #595959;
}

.address .address_title .title-user {
    display: block;
}

.address .address_title .title-desc {
    display: block;
}

/* 列表 */
.link_box {
    margin: 10rpx 0 0 0;
    padding: 0 20rpx;
    background: #fff;
}

.link_box .link_h2 {
    text-align: center;
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 88rpx;

    color: #595959;
}

.add_btn {
    align-self: flex-end;
    margin-left: auto;
}

.add_btn .add_car {
    display: inline-block;
    width: 138rpx;
    height: 50rpx;
    text-align: center;
    border-radius: 8rpx;
    border: solid 1rpx #f95a59;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;

    letter-spacing: 0rpx;
    color: #f95a59;
    line-height: 50rpx;
    box-sizing: border-box;
    vertical-align: middle;


}

.add_pay {
    vertical-align: middle;
    display: inline-block;
    margin: 0 0 0 10rpx;
    width: 138rpx;
    height: 50rpx;
    background-color: #f95a59;
    border-radius: 8rpx;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 50rpx;
    letter-spacing: 0rpx;
    color: #ffffff;
    text-align: center;
}

.com_list {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
    height: 130rpx;
}

.com_list .left_item {
    width: 60rpx;
    line-height: 130rpx;
    text-align: center;
}

.com_list .left_item .icon {
    width: 24rpx;
    height: 24rpx;
    margin: 0 auto;
}

.center_item {
    display: flex;
    flex: 1;
}

.center_item image {
    width: 130rpx;
    height: 130rpx;
    border: 1rpx solid #eee;
    display: block;
}

.center_item .text_box {
    display: block;
    margin: 0 0 0 22rpx;
}

.center_item .text_box .title {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    letter-spacing: 0px;
    color: #595959;
}

.center_item .text_box .shop {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 64rpx;
    letter-spacing: 0px;
    color: #989898
}

.center_item .text_box .price {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    letter-spacing: 0px;
    color: #f95959;
}

.center_item .btns {

    height: 44rpx;
    border-radius: 8rpx;
    border: solid 1rpx #989898;
    line-height: 44rpx;
    align-self: flex-end;
    margin-left: auto;
}

/* 订单信息 */
.order_box {
    margin: 10rpx 0 0 0;
    background: #fff;
    padding: 0 20rpx;
}

.order_h2 {
    margin: 8rpx 20rpx;
    padding: 0 0 0 10rpx;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;

    letter-spacing: 0.2px;
    color: #595959;
    border-left: 1rpx solid #f95a59;

}

.order_item {
    padding: 0 20rpx;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 50rpx;
    color: #989898;
}