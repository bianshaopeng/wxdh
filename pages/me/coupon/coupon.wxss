page {
  height: 100%;
  width: 100%;
}

.warp_box {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #eee;
}

.coupon {

  display: flex;
  justify-content: space-between;
  width: 727rpx;
  height: 181rpx;
  margin: 20rpx auto 0;
  padding: 40rpx 0 0 56rpx;
  box-sizing: border-box;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  /* background: red; */
}

.coupon_left {}

.coupon_left .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  font-stretch: normal;
  line-height: 46rpx;
  letter-spacing: 0px;
  color: #ffffff;
}

.coupon_left .rule {
  display: block;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 46rpx;
  letter-spacing: 0px;
  color: #ffffff;
}

.coupon_right {
  width: 240rpx;
  text-align: center;
}

.coupon_right .way {
  display: block;
  width: 60rpx;
  margin: 0 auto;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 20px;
  color: #4e504f;

}

.coupon_right .time {
  display: block;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 60rpx;
  color: #999999;
}