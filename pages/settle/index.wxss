/* pages/car/settle/index.wxss */
.sure {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #eee;
}

.address {
    display: flex;
    margin: 0 0 10rpx 0;
    padding: 24rpx 20rpx;
    flex-direction: row;
    background: #fff;
}

.address image {
    width: 43rpx;
    height: 48rpx;
    margin: 0 20rpx 0 0;
    align-self: center;
}

.address .address_title {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 41rpx;

    color: #595959;
}

.address .address_title .title-user {
    display: block;
}

.address .address_title .title-desc {
    display: block;
}

.address .arrow {
    width: 10px;
    height: 10px;
    border-top: 2px solid #595959;
    border-right: 2px solid #595959;
    transform: rotate(45deg);
    margin-top: 10rpx;
    align-self: center;
    margin-left: auto;


}

/* 支付信息展示  */
.pay_box {
    margin: 0 0 10rpx 0;
    padding: 0 20rpx;
    background: #fff;
}

.pay_box .pay_h2 {

    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40rpx;
    letter-spacing: 0.2rpx;
    color: #989898;
}

.pay_lsit {
    display: flex;
    margin: 0 0 20rpx 0;

}

.pay_lsit .left_image {
    width: 44rpx;
    height: 44rpx;
    margin-right: 20rpx;
}

.pay_lsit .pay_desc {
    font-size: 28rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 44rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
}

.pay_lsit .pay_desc .samil_desc {
    display: inline-block;
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 44rpx;
    letter-spacing: 0.2rpx;
    color: #989898;
}

.pay_lsit .right {
    margin-left: auto;
    align-self: center;

}

.pay_lsit .right .icon {
    width: 24rpx;
    height: 24rpx;
}

/* 优惠券 */
.coupons {
    display: flex;
    margin: 0 0 10rpx 0;
    padding: 0 20rpx;
    background: #fff;
    justify-content: space-between;
}

.coupons .title {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 118rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
}

.coupons .arrow {
    width: 10px;
    height: 10px;
    border-top: 2px solid #595959;
    border-right: 2px solid #595959;
    transform: rotate(45deg);
    margin-top: 10rpx;
    align-self: center;
}

/* 结算订单信息展示模块 */
.msg_box {
    margin: 0 0 10rpx 0;
    padding: 0 20rpx 86rpx;
    background: #ffff;
}

.msg_box .msg_h2 {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 44rpx;
    letter-spacing: 0.2rpx;
    color: #989898;
}




.com_list {
    background: #fff;
    margin: 0 0 20rpx 0;
}

.center_item {
    display: flex;
    flex: 1;
}

.center_item image {
    width: 130rpx;
    height: 130rpx;
    border: 1rpx solid #eee;
    display: block;
}

.center_item .text_box {
    display: block;
    margin: 0 0 0 22rpx;
}

.center_item .text_box .title {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    letter-spacing: 0px;
    color: #595959;
}

.center_item .text_box .shop {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 64rpx;
    letter-spacing: 0px;
    color: #989898
}

.center_item .text_box .price {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 34rpx;
    letter-spacing: 0px;
    color: #f95959;
}

.msg_item {
    display: flex;
    justify-content: space-between;

}

.msg_item .left_title {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 40px;
    letter-spacing: 0.2rpx;
    color: #989898;
}

.msg_item .right_number {
    font-size: 24rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 36px;
    letter-spacing: 0.2rpx;
    color: #989898;
    text-align: right;

}

.msg_bottom {

    border-top: 1px solid #dcdcdc;
}

.msg_bottom .title {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 74rpx;
    letter-spacing: 0.3rpx;
    color: #595959;
}

.msg_bottom .right_sum {
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 74rpx;
    letter-spacing: 0.3rpx;
    color: #f95a59;
}

/* 底部固定结算 */

.footer {
    position: fixed;
    width: 100%;
    height: 86rpx;
    display: flex;
    left: 0;
    right: 0;
    bottom: 0;
    background: #dcdcdc;

}

.footer .close_order {
    width: 50%;
    text-align: center;
    background-color: #828282;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 86rpx;
    letter-spacing: 0.3rpx;
    color: #ffffff;
}

.footer .pay_order {
    width: 50%;
    text-align: center;
    font-size: 34rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 86rpx;
    letter-spacing: 0.3rpx;
    color: #ffffff;
    background-color: #f95a59;
}